{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["../*"]
    },
    "baseUrl": "."
  },
  "include": [
    "index.ts",
    "config/**/*.ts",
    "routes/**/*.ts",
    "middleware/**/*.ts",
    "workers/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}

